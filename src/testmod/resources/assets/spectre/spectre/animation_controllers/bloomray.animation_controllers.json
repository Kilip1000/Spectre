{
	"format_version": "1.19.0",
	"animation_controllers": {
		"controller.animation.bloomray.movement": {
			"initial_state": "idle",
			"states": {
				"idle": {
					"animations": ["idle"],
					"transitions": [
						{"swimming": "(q.vertical_speed != 0) || (q.ground_speed != 0)"}
					],
					"blend_transition": 0.5
				},
				"swimming": {
					"animations": ["swim"],
					"transitions": [
						{"idle": "(q.vertical_speed + q.ground_speed) == 0"}
					],
					"blend_transition": 0.5
				}
			}
		},
		"controller.animation.bloomray.antenna": {
			"initial_state": "default",
			"states": {
				"default": {
					"animations": ["crown_sway"],
					"transitions": [],
					"blend_transition": 0.1
				}
			}
		}
	}
}
